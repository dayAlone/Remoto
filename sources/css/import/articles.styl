.articles
    display flex
    align-self: flex-end
    margin-right -15px
    margin-left -15px
    flex-wrap: wrap
    margin-top 30px
    &__item
        padding 0 15px
        font-size 14px
        line-height 1.3

        flex 1 1 calc(100% - 40px)
        @media (min-width: scr_sm)
            flex 1 1 calc(50% - 40px)
        @media (min-width: scr_md)
            margin-top 0

            flex 1 1 calc(20% - 40px)
        @media (min-width: scr_lg)
            font-size 15px
        @media (min-width: 1600px)
            font-size 17px
    &__icon
        size 44px
        background-color orange
        display flex
        justify-content: center
        align-items: center
        border-radius: 50%
        position relative
        top -3px
        img
            max-width: 50%
            max-height: 50%
    &__title
        display: flex
        justify-content: space-between
        align-items: center
        margin-bottom 5px
        @media (min-width: scr_lg)
            margin-bottom 10px
    &__name
        padding 0 10px
        font-weight 900
        font-family $gotham
        line-height 1.1
        font-size 16px

        flex: 1 1 calc(100% - 50px)
        @media (min-width: scr_lg)
            font-size 18px
        @media (min-width: 1600px)
            font-size 21px
        a^[0]__title &
            color black
            span
                border-line(alpha(black, .4))
            &:hover
                color orange
                span
                    border-line(alpha(orange, .4))
    &--padding
        & ^[0]__description
            padding-left 55px
    &--black
        & ^[0]__title
            color black
        & ^[0]__description
            color alpha(black, .7)
        &-icons
            & ^[0]__icon
                background-color black
    &--white
        & ^[0]__description
            color alpha(white, .7)
    &--half
        margin-top -15px
        & ^[0]__item
            flex 1 1 calc(100% - 40px)
            margin-top 20px
            @media (min-width: scr_sm)
                margin-top 15px
                flex 1 1 calc(100% - 40px)
            @media (min-width: scr_md)
                flex 1 1 calc(50% - 40px)
            @media (min-width: scr_lg)
                margin-top 30px

    &--full
        margin-top -20px
        & ^[0]__icon
            margin-right 15px
        & ^[0]__description
            padding-left 70px
        & ^[0]__item
            flex 1 1 calc(100%)
            margin-top 20px
            @media (min-width: scr_sm)
                flex 1 1 calc(100%)
                max-width: 70%
                margin-top 15px
            @media (min-width: scr_md)
                flex 1 1 calc(100%)
            @media (min-width: scr_lg)
                margin-top 30px
